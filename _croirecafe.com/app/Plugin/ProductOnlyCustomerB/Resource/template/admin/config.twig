{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}{{'product_only_customer_b.plugin.title'|trans}}{% endblock %}
{% block sub_title %}{% endblock %}
{% block stylesheet %}{% endblock stylesheet %}
{% block javascript %}{% endblock javascript %}
{% block main %}

    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-header"><span>設定方法</span></div>
                    <div class="card-body">
                        <div class="card rounded border-0 mb-2">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <div class="mb-2">

                                        <h4>商品詳細ページの対応</h4>
                                        &nbsp;formタグの前後に赤字のコードを追加してください&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<small>※プラグインを無効化・削除する場合、必ずコードも削除して下さい</small>
                                    </div>
                                    &nbsp;&nbsp;<strong style="color:#DE5D50">{{'product_only_customer_b.admin.snippet1'|trans}}</strong><br/>
                                    {{'product_only_customer_b.admin.place.detail1'|trans}}<br/>
                                    {{'product_only_customer_b.admin.place.detail2'|trans}}<br/>
                                    &nbsp;&nbsp;<strong style="color:#DE5D50">{{'product_only_customer_b.admin.snippet2'|trans}}</strong>
                                </li>
                                <li class="list-group-item">
                                    <div class="mb-2">

                                        <h4>商品一覧ページの対応</h4>
                                        &nbsp;if文の前後に赤字のコードを追加してください&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<small>※プラグインを無効化・削除する場合、必ずコードも削除して下さい</small>
                                    </div>
                                    &nbsp;&nbsp;<strong style="color:#DE5D50">{{'product_only_customer_b.admin.snippet1'|trans}}</strong><br/>
                                    {{'product_only_customer_b.admin.place.list1'|trans}}<br/>
                                    {{'product_only_customer_b.admin.place.list2'|trans}}<br/>
                                    &nbsp;&nbsp;<strong style="color:#DE5D50">{{'product_only_customer_b.admin.snippet2'|trans}}</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="c-conversionArea">
        <div class="c-conversionArea__container">
            <div class="row justify-content-between align-items-center">
                <div class="col-6">
                    <div class="c-conversionArea__leftBlockItem">
                        <a class="c-baseLink"
                           href="{{ url('admin_store_plugin') }}">
                            <i class="fa fa-backward" aria-hidden="true"></i>
                            <span>プラグイン一覧</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
