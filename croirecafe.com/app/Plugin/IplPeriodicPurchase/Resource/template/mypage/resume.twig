{% extends 'default_frame.twig' %}

{% form_theme form 'Form/form_div_layout.twig' %}

{% set mypageno = 'IplPeriodicPurchase' %}

{% block main %}
    <div class="ec-layoutRole__main">
        <div class="ec-mypageRole">
            <div class="ec-pageHeader">
                <h1>{{ 'マイページ'|trans }}/{{ '定期受注再開'|trans }}</h1>
            </div>
            {{ include('Mypage/navi.twig') }}
        </div>

        {% include '@IplPeriodicPurchase/mypage/periodic_navi.twig' %}

        <div class="ec-withdrawRole">
            <form method="post" action="?">
                {{ form_widget(form._token) }}
                <div class="ec-off3Grid mypageNotice">
                    <div class="ec-off3Grid__cell">
                        <div style="font-size:100px;text-align:center;">
                            <div class="ec-icon"><img src="{{ asset('assets/icon/exclamation.svg') }}" alt=""></div>
                        </div>
                        <p class="ec-withdrawRole__title">再開手続きの前に<wbr>ご確認ください</p>
                        <p class="ec-withdrawRole__description">
	                        本日再開した場合の次回お届け予定日は{{ today|date_modify("+10 day")|date('Y/m/d')}}以降の、
	                        毎月1日、または15日となります。
	                    </p>
                    </div>
                </div>
                <div class="ec-off4Grid">
                    <div class="ec-off4Grid__cell">
                        <button type="submit" class="cta ec-blockBtn--cancel" name="mode"
                                value="confirm">{{ '再開する'|trans }}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
